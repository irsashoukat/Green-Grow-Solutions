<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View_item"
    android:fillViewport="true">



        <LinearLayout
            android:id="@+id/linear"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/getImg"
                android:layout_width="360dp"
                android:layout_height="240dp"
                android:layout_gravity="center"/>
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <TextView
                android:id="@+id/titl"
                android:gravity="center"
                android:textStyle="bold|normal"
                android:textSize="22sp"
                android:elevation="15dp"
                android:padding="5dp"
                android:background="#00924f"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnPlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/play"
                    android:layout_margin="10dp"
                    />
                <ImageView
                    android:id="@+id/btnPause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/pause"
                    android:layout_margin="10dp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/headingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/desc"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/headingCultivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultivation:"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/headingTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/temp"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/headingSoilConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil Conditions"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/soil"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/headingSowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sowing"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/sowing"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/headingSeedRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seed Rate"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/seedrate"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/headingFertilizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fertilizer"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/fertilizer"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/headingIrrigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Irrigation"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/irrigation"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/headingHarvesting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harvesting"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/harvesting"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/headingVariety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variety"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/variety"
                android:textSize="16sp"
                android:gravity="start"
                android:justificationMode="inter_word"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnTranslateUrdu"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translate in Urdu"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>



</ScrollView>