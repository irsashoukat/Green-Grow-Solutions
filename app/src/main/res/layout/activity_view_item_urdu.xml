<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ViewItemUrdu"
    android:fillViewport="true">
    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/getImgUrdu"
            android:layout_width="360dp"
            android:layout_height="240dp"
            android:layout_gravity="center"/>
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/titleUrdu"
            android:gravity="center"
            android:textStyle="bold|normal"
            android:textSize="22sp"
            android:elevation="15dp"
            android:padding="5dp"
            android:background="#00924f"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btnPlayUrdu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/play"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/btnPauseUrdu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pause"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفصیلات:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/descUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کاشت کاری:"
            android:textColor="@color/appColor"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="22sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="درجہ حرارت:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tempUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مٹی کی خصوصیات:"
            android:textColor="@color/appColor"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/soilUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بیج بونے کا عمل:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/sowingUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بیج کی شرح:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/seedRateUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کھاد:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/fertilizerUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="آبپاشی:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/irrigationUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فصل کی کٹائی:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/harvestingUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" مختلف اقسام:"
            android:textColor="@color/appColor"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/varietyUrdu"
            android:textSize="16sp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnTranslateEnglish"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انگریزی میں ترجمہ کریں"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
</ScrollView>