<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/edCropTitleUrdu"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold|normal"
                    android:layout_margin="10dp"
                    android:text="فصل کا عنوان"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/edCropDescriptionUrdu"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:text="فصل کی تفصیل درج کریں..  فصل کی تفصیل درج کریں..  فصل کی تفصیل درج کریں.."
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"/>

                <TextView
                    android:textColor="@color/appColor"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:text="مزید پڑھیں..."
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/cropImgUrdu"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_width="140dp"
                android:layout_height="140dp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>
